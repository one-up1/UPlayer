<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/database">

        <Preference
            android:key="@string/key_sync_database"
            android:title="@string/sync_database" />

        <Preference
            android:key="@string/key_backup"
            android:title="@string/backup" />

        <Preference
            android:key="@string/key_restore_backup"
            android:title="@string/restore_backup" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/resume_offset">

        <EditTextPreference
            android:key="@string/key_resume_offset_song"
            android:title="@string/songs"
            android:dialogTitle="@string/resume_offset_song"
            android:dialogMessage="@string/in_seconds"
            android:inputType="number"
            android:selectAllOnFocus="true" />

        <EditTextPreference
            android:key="@string/key_resume_offset_playlist"
            android:title="@string/playlists"
            android:dialogTitle="@string/resume_offset_playlist"
            android:dialogMessage="@string/in_seconds"
            android:inputType="number"
            android:selectAllOnFocus="true" />

    </PreferenceCategory>

</PreferenceScreen>