<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvTotalSongsPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/bMinDate"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/min_date" />

    <Button
        android:id="@+id/bMaxDate"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/max_date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <Spinner
            android:id="@+id/sSortBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/sort_by_entries" />

        <CheckBox
            android:id="@+id/cbSortDescending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descending" />

    </LinearLayout>

    <Button
        android:id="@+id/bQuery"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/query" />

</LinearLayout>