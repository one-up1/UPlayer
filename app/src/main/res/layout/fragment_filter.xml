<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:columnCount="2"
    tools:context=".fragment.FilterFragment">

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="@string/title"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="@string/artist"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMinYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/min_year"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMaxYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/max_year"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMinAdded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMaxAdded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1" />

    <RadioGroup
        android:id="@+id/rgBookmarked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1">

        <RadioButton
            android:layout_width="@dimen/filter_all_radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/all" />

        <RadioButton
            android:id="@+id/rbBookmarked"
            android:layout_width="@dimen/filter_radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/bookmarked" />

        <RadioButton
            android:id="@+id/rbUnbookmarked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbookmarked" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rgArchived"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1">

        <RadioButton
            android:layout_width="@dimen/filter_all_radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/all" />

        <RadioButton
            android:id="@+id/rbArchived"
            android:layout_width="@dimen/filter_radio_button_width"
            android:layout_height="wrap_content"
            android:text="@string/archived" />

        <RadioButton
            android:id="@+id/rbUnarchived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unarchived" />

    </RadioGroup>

    <Button
        android:id="@+id/bTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bPlaylists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMinLastPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMaxLastPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>