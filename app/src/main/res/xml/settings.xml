<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/database">

        <Preference
            android:key="@string/key_sync_database"
            android:title="@string/sync_database" />

        <Preference
            android:key="@string/key_backup"
            android:title="@string/backup" />

        <Preference
            android:key="@string/key_restore_backup"
            android:title="@string/restore_backup" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/volume">

        <EditTextPreference
            android:key="@string/key_max_volume"
            android:title="@string/max_volume"
            android:dialogMessage="@string/max_volume_dialog_message"
            android:inputType="number"
            android:defaultValue="100"
            android:selectAllOnFocus="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/resume_offset_category">

        <EditTextPreference
            android:key="@string/key_resume_offset"
            android:title="@string/resume_offset"
            android:dialogMessage="@string/resume_offset_dialog_message"
            android:inputType="number"
            android:selectAllOnFocus="true" />

    </PreferenceCategory>

</PreferenceScreen>