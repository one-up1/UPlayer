<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NotificationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginStart">@dimen/notification_margin</item>
        <item name="android:layout_marginEnd">@dimen/notification_margin</item>
        <item name="android:background">@drawable/notification_button</item>
    </style>

    <style name="NotificationButton.Small" parent="NotificationButton">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NotificationButton.Large" parent="NotificationButton">
        <item name="android:layout_marginTop">@dimen/notification_margin</item>
    </style>

</resources>
