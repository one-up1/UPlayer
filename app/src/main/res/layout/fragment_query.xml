<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:columnCount="2"
    tools:context=".fragment.QueryFragment" >

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/artist"
        app:layout_columnWeight="1" />

    <Spinner
        android:id="@+id/sArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMinYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/min_year"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMaxYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/max_year"
        android:inputType="number"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMinAdded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_min_added"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMaxAdded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_max_added"
        app:layout_columnWeight="1" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/rbAll"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1">

        <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all" />

        <RadioButton
            android:id="@+id/rbBookmarked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookmarked" />

        <RadioButton
            android:id="@+id/rbNotBookmarked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_bookmarked" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_columnWeight="1">

        <CheckBox
            android:id="@+id/cbTagsNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_tags"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_columnWeight="1">

        <CheckBox
            android:id="@+id/cbPlaylistsNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bPlaylists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_playlists"
            android:singleLine="true" />

    </LinearLayout>

    <Button
        android:id="@+id/bMinLastPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_min_last_played"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bMaxLastPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_max_last_played"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMinTimesPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/min_times_played"
        android:inputType="number"
        app:layout_columnWeight="1" />

    <com.oneup.uplayer.widget.EditText
        android:id="@+id/etMaxTimesPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/max_times_played"
        android:inputType="number"
        app:layout_columnWeight="1" />

    <Spinner
        android:id="@+id/sSortColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/song_sort_columns"
        app:layout_columnWeight="1" />

    <CheckBox
        android:id="@+id/cbSortDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bQuery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/query"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bStatistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bSyncDatabase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sync_database"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/bBackup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/backup"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>